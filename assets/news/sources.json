{
  "sources": [
    {
      "name": "CoinDesk",
      "url": "https://www.coindesk.com/feed/",
      "category": "Cryptocurrency",
      "enabled": true,
      "description": "Leading cryptocurrency and blockchain news source"
    },
    {
      "name": "CoinTelegraph",
      "url": "https://cointelegraph.com/rss",
      "category": "Cryptocurrency",
      "enabled": true,
      "description": "Global cryptocurrency and blockchain technology news"
    },
    {
      "name": "CNBC Finance",
      "url": "https://www.cnbc.com/id/100003114/device/rss/rss.html",
      "category": "Finance",
      "enabled": true,
      "description": "Business and financial news from CNBC"
    },
    {
      "name": "Reuters Business",
      "url": "https://www.reuters.com/business/finance/rss",
      "category": "Business",
      "enabled": true,
      "description": "Global business and financial news from Reuters"
    },
    {
      "name": "Financial Times FinTech",
      "url": "https://www.ft.com/technology?format=rss",
      "category": "FinTech",
      "enabled": false,
      "description": "Financial Times technology and fintech coverage"
    }
  ],
  "updateSchedule": {
    "frequency": "daily",
    "time": "06:00 UTC",
    "timezone": "UTC"
  },
  "filters": {
    "keywords": [
      "fintech",
      "cryptocurrency",
      "blockchain",
      "digital payments",
      "central bank digital currency",
      "defi",
      "regtech",
      "insurtech",
      "wealthtech",
      "neobank"
    ],
    "excludeKeywords": [
      "gambling",
      "ponzi",
      "scam"
    ]
  },
  "settings": {
    "maxArticlesPerSource": 10,
    "articleRetentionDays": 7,
    "duplicateDetection": true,
    "contentFiltering": true
  }
}
